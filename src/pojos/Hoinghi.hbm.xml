<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojos.Hoinghi" table="hoinghi" catalog="quanlyhoinghi" optimistic-lock="version">
        <id name="idHoiNghi" type="java.lang.Integer">
            <column name="IdHoiNghi" />
            <generator class="identity" />
        </id>
        <many-to-one name="diadiem" class="pojos.Diadiem" fetch="select" lazy="false">
            <column name="DiaDiem" not-null="true" />
        </many-to-one>
        <property name="tenHoiNghi" type="string">
            <column name="TenHoiNghi" length="65535" not-null="true" />
        </property>
        <property name="moTaNgan" type="string">
            <column name="MoTaNgan" length="65535" />
        </property>
        <property name="moTaChiTiet" type="string">
            <column name="MoTaChiTiet" />
        </property>
        <property name="hinhAnh" type="binary">
            <column name="HinhAnh" />
        </property>
        <property name="thoiGian" type="timestamp">
            <column name="ThoiGian" length="19" not-null="true" />
        </property>
        <property name="khoangThoiGian" type="int">
            <column name="KhoangThoiGian" not-null="true" />
        </property>
        <property name="nguoiThamDu" type="int">
            <column name="NguoiThamDu" not-null="true" />
        </property>
        <property name="active" type="boolean">
            <column name="Active" not-null="true" />
        </property>
        <set name="thamgiahoinghis" table="thamgiahoinghi" inverse="true" lazy="false" fetch="select">
            <key>
                <column name="IdHoiNghi" not-null="true" />
            </key>
            <one-to-many class="pojos.Thamgiahoinghi" />
        </set>
    </class>
</hibernate-mapping>
